depend() {
	need net
	use logger dns
	after bootmisc
}

start() {
	ebegin "Starting DynDynDong"
	start-stop-daemon --start --chuid dyndyndong --exec /usr/bin/dyndyndong \
		--pidfile /var/run/dyndyndong.pid --make-pidfile --background -- --syslog
	eend $?
}

stop() {
	ebegin "Stopping DynDynDong"
	start-stop-daemon --stop --exec /usr/bin/dyndyndong \
		--pidfile /var/run/dyndyndong.pid
	eend $?
}
